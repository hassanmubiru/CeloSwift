{
  "name": "celoswiftapp",
  "version": "1.0.0",
  "description": "Mobile-first decentralized remittance application on Celo",
  "main": "App.tsx",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:integration": "hardhat test test/integration/",
    "test:contracts": "hardhat test",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network alfajores",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network celo",
    "verify": "hardhat run scripts/verify-contracts.js --network alfajores",
    "verify:mainnet": "hardhat run scripts/verify-contracts.js --network celo",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "eject": "expo eject"
  },
  "keywords": [
    "celo",
    "remittance",
    "mobile",
    "defi",
    "stablecoin",
    "cross-border",
    "payments",
    "react-native",
    "expo"
  ],
  "author": "CeloSwift Team",
  "license": "MIT",
  "dependencies": {
    "@craftzdog/react-native-buffer": "^6.1.1",
    "@expo/vector-icons": "^14.0.0",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "assert": "^2.1.0",
    "ethers": "^6.15.0",
    "expo": "~51.0.28",
    "expo-barcode-scanner": "~13.0.1",
    "expo-camera": "~15.0.16",
    "expo-status-bar": "~1.12.1",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "react-native-crypto-js": "^1.0.0",
    "react-native-get-random-values": "^1.11.0",
    "react-native-keychain": "^8.1.3",
    "react-native-qrcode-svg": "^6.3.0",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-svg": "15.2.0",
    "readable-stream": "^4.7.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomicfoundation/ignition-core": "^0.15.13",
    "@openzeppelin/contracts": "^5.4.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/jest": "^29.5.8",
    "@types/mocha": "^10.0.10",
    "@types/react": "~18.2.45",
    "@types/react-test-renderer": "^18.0.7",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "eslint-config-expo": "^7.0.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "jest": "^29.2.1",
    "jest-expo": "~51.0.3",
    "react-test-renderer": "18.2.0",
    "solidity-coverage": "^0.8.16",
    "typechain": "^8.3.2",
    "typescript": "~5.3.3"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "testMatch": [
      "**/__tests__/**/*.(js|jsx|ts|tsx)",
      "**/*.(test|spec).(js|jsx|ts|tsx)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{js,jsx,ts,tsx}"
    ]
  },
  "private": true,
  "engines": {
    "node": ">=16.0.0"
  }
}
